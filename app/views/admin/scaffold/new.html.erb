<h1><%=t :new %> <%= @object.class.human_name %></h1>

<%= error_messages_for @object.class.to_s.underscore.to_sym %>

<% form_for(@object, :url => collection_url, :live_validations => true, :html => {:multipart => true }) do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>
  <p class="submit"><%= submit_tag t(:create) %></p>
<% end %>
<br/>
<%= link_to t(:back), collection_url %>