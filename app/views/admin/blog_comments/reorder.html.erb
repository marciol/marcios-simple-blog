<h1><%=t :reorder %> News Posts</h1>

<ul id="order">
	<% @items.each do |item| %>
		<li id="item_<%= item.id %>"><%= item.name %></li>
	<% end %>
</ul>

<%= sortable_element 'order', 
      :complete => visual_effect(:highlight, 'order'), 
      :url => { :action => "order" } %>

<p><%= link_to t(:back), admin_news_category_news_posts_path(parent_object) %></p>
